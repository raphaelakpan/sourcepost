<%= form_for(user, url: login_path) do |form| %>
  <div class="form-group">
    <%= form.email_field :email, class: "form-control #{flash[:error].present? ? 'is-invalid' : ''}", placeholder: "Enter your Email" %>
  </div>
  <div class="form-group">
    <%= form.password_field :password, class: "form-control #{flash[:error].present? ? 'is-invalid' : ''}", placeholder: "Enter your Password" %>
  </div>
  <div class="form-group">
    <%= form.submit "Login", class: 'btn btn-info btn-block btn-lg' %>
  </div>
  <div class="form-group">
    New User? <%= link_to 'Sign Up Here!', signup_path %> ðŸ’ƒ
  </div>
<% end %>
