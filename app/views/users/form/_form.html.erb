<%= form_for(user) do |form| %>
  <div class="form-group">
    <%= form.text_field :name, class: "form-control #{user.errors[:name].present? ? 'is-invalid' : ''}", placeholder: "Enter your Name" %>
    <%= render 'users/form/form_error', errors: user.errors[:name].uniq, field: 'Name' %>
  </div>
  <div class="form-group">
    <%= form.email_field :email, class: "form-control #{user.errors[:email].present? ? 'is-invalid' : ''}", placeholder: "Enter your Email" %>
    <%= render 'users/form/form_error', errors: user.errors[:email].uniq, field: 'Email' %>
  </div>
  <div class="form-group">
    <% placeholder = params[:action] == "edit" ? "Enter your New Password" : "Enter your Password" %>
    <%= form.password_field :password, class: "form-control #{user.errors[:password].present? ? 'is-invalid' : ''}", placeholder: placeholder %>
    <%= render 'users/form/form_error', errors: user.errors[:password].uniq, field: 'Password' %>
  </div>
  <div class="form-group">
    <% placeholder = params[:action] == "edit" ? "Re-enter your New Password" : "Re-Enter your Password" %>
    <%= form.password_field :password_confirmation, class: "form-control #{user.errors[:password_confirmation].present? ? 'is-invalid' : ''}", placeholder: placeholder %>
    <%= render 'users/form/form_error', errors: user.errors[:password_confirmation].uniq, field: 'Password Confirmation' %>
  </div>
  <div class="form-group">
    <% action = params[:action] == "edit" ? "Save changes" : "Create my Account" %>
    <%= form.submit action, class: 'btn btn-info btn-block btn-lg' %>
  </div>
  <% unless params[:action] == "edit" %>
    <div class="form-group">
      Already have an account? <%= link_to 'Login Here', login_path %> ğŸ™‚
    </div>
  <% end %>
<% end %>
